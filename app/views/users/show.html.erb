<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<h2>Posts</h2>
<%#= render @user.posts %>
<%= show_collection_or_message @user.posts %>

<h2>Comments</h2>
<%= show_collection_or_message @user.comments %>
<%#= render @user.comments %>

<h2>Favorited Posts</h2>
<%= show_collection_or_message @user.favorited_posts %>
